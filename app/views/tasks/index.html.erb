<h1>List</h1>

<% @tasks.each do |task| %>
<ul>
  <li> <%= link_to task.title, task_path(task.id) %>: <%= task.details %> -
    <% if task.completed == true %>
      Completed
    <% else %>
      Not Completed
    <% end %>
    <%= link_to "delete", task_path(task.id), method: :delete %>
  </li>
</ul>
<% end %>

<%= link_to "Back to home", root_path %>
